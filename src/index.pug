section.section.work#work 
	h2 My work
	.project-gallery
		each project in projects
			.project-card 
				a.proj-card-text(href=`projects/${project.slug}` data-cursor-class="arrow")
					h3.proj-card-title #{project.title}
				.proj-card-tag 
					p Web Design
				a.proj-card-img-wrapper(href=`projects/${project.slug}` data-cursor-class="arrow") 
					img.proj-card-img(src="/_assets/medium_valivaryus_splash_01_5c339485d5.png", alt="Photo", srcset="")
