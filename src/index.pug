section.section.hero-home
	.job-title Designer + Digital Enthusiast
	.hero-text With a love for digital and social design, I strive to keep giving while growing.
section.section.work#work 
	h2 My work
	.project-gallery
		- const wantedOrder = ordering.projects
		- const givenOrder = projects 
		- for (let i=0; i < wantedOrder.length; i++) {
		-		let wantedProj = wantedOrder[i].item.data.attributes;
		-		for (let j=0; j < givenOrder.length; j++) {
		-			let givenProj = givenOrder[j];
		-			if (givenProj.title == wantedProj.title) {
		- 			let projCardCover = givenProj.cover.image.data.attributes
						.project-card 
							a.proj-card-text(href=`projects/${wantedProj.slug}` data-cursor-class="arrow")
								h3.proj-card-title #{wantedProj.title}
							.proj-card-tag 
								p #{givenProj.tags.data[0].attributes.discipline}
							a.proj-card-img-wrapper(href=`projects/${wantedProj.slug}` data-cursor-class="arrow") 
								img.proj-card-img(src=`/_assets/${projCardCover.hash}${projCardCover.ext}` alt="Photo" srcset=`/_assets/${projCardCover.formats.small.hash}${projCardCover.formats.small.ext} 500w, /_assets/${projCardCover.formats.medium.hash}${projCardCover.formats.medium.ext} 1000w, /_assets/${projCardCover.formats.large.hash}${projCardCover.formats.large.ext} 2000w`)
		-			}
		-		}
		-	}
