doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", href="/style.css")
		title SMOYA.ME | #{title}
		noscript
			style. 
				.container, #cursor {
						visibility: visible; 
				}
	body#body(class=`${pageColorChoice}`)
		.container
			include _header.pug
			.wrapper
				.content
					main.main 
						!=content
					include _footer.pug
		#cursor(aria-hidden="true" data-scroll-sticky)
			.cursor__circle(aria-hidden="true")
		script(src="/bundle.js")